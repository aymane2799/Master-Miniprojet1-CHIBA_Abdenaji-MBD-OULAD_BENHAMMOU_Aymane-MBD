<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".activities.AddModuleActivity" android:layout_gravity="center" android:paddingLeft="20dp"
		android:paddingRight="20dp">

	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:id="@+id/filieresTv"
			android:hint="Choisir les filieres"
			android:padding="12dp"
			android:layout_centerInParent="false"
			android:drawableEnd="@android:drawable/arrow_down_float"
			android:background="@android:drawable/editbox_background"
			android:textSize="18sp"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintHorizontal_bias="0.25" app:layout_constraintTop_toBottomOf="@+id/nomModuleInput2"
			android:layout_marginTop="60dp"/>
	<TextView
			android:text="Ajouter un Module"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/updateModuleTitle"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="80dp" android:textSize="40sp" android:textStyle="bold"
			android:textColor="#000000"/>
	<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="textPersonName"
			android:ems="10"
			android:id="@+id/nomModuleInput2"
			android:hint="Nom de Module" android:height="48dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" android:minHeight="48dp"
			app:layout_constraintTop_toBottomOf="@+id/updateModuleTitle" android:layout_marginTop="80dp"/>
	<Button
			android:text="Ajouter"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:id="@+id/createModuleBtn"
			android:backgroundTint="@color/primary"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/filieresTv" android:layout_marginTop="60dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>