<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".activities.AddModuleActivity" android:layout_gravity="center" android:paddingLeft="20dp"
		android:paddingRight="20dp">

	<TextView
			android:text="Ajouter un Module"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/addModuleTitle"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="80dp" android:textSize="40sp" android:textStyle="bold"
			android:textColor="#000000"/>
	<TextView
			android:text="Nom de Module"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textView2"
			app:layout_constraintTop_toBottomOf="@+id/addModuleTitle" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginTop="80dp" android:textSize="20sp"/>
	<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="textPersonName"
			android:ems="10"
			android:id="@+id/nomFiliereInput"
			android:hint="Nom de Module" android:height="48dp"
			app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="20dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"/>
	<TextView
			android:text="FiliÃ¨res"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textView3"
			app:layout_constraintTop_toBottomOf="@+id/nomFiliereInput" app:layout_constraintStart_toStartOf="parent"
			android:textSize="20sp" android:layout_marginTop="20dp"/>
	<Spinner
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:id="@+id/filieresSpinner"
			tools:layout_editor_absoluteX="20dp"
			app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="20dp"/>
	<Button
			android:text="Button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:id="@+id/button"
			android:backgroundTint="@color/primary"
			app:layout_constraintTop_toBottomOf="@+id/filieresSpinner" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="60dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>