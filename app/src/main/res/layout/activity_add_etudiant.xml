<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".activities.AddEtudiantActivity" android:padding="20dp">

	<Button
			android:text="Ajouter"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:id="@+id/addEtudiantBtn"
			android:backgroundTint="@color/primary"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/filiereTv"
			android:layout_marginTop="40dp"/>
	<TextView
			android:text="Ajouter un Etudiant"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/addFiliereTitle2"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="80dp" android:textSize="40sp" android:textStyle="bold"
			android:textColor="#000000"/>
	<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="textPersonName"
			android:ems="10"
			android:id="@+id/cneEtudiantInput"
			android:hint="CNE" android:height="48dp"
			app:layout_constraintTop_toBottomOf="@+id/addFiliereTitle2"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" android:minHeight="48dp" android:layout_marginTop="50dp"/>
	<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="textPersonName"
			android:ems="10"
			android:id="@+id/nomEtudiantInput"
			android:hint="Nom" android:height="48dp"
			app:layout_constraintTop_toBottomOf="@+id/cneEtudiantInput"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" android:minHeight="48dp" android:layout_marginTop="20dp"/>
	<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="textPersonName"
			android:ems="10"
			android:id="@+id/prenomEtudiantInput"
			android:hint="Prenom" android:height="48dp"
			app:layout_constraintTop_toBottomOf="@+id/nomEtudiantInput"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" android:minHeight="48dp"
			app:layout_constraintHorizontal_bias="0.6" android:layout_marginTop="20dp"/>
	<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="textPersonName"
			android:ems="10"
			android:id="@+id/niveauEtudiantInput"
			android:hint="Niveau" android:height="48dp"
			app:layout_constraintTop_toBottomOf="@+id/prenomEtudiantInput"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" android:minHeight="48dp"
			android:layout_marginTop="20dp"/>
	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:id="@+id/filiereTv"
			android:hint="Choisir la filiÃ¨re"
			android:padding="12dp"
			android:layout_centerInParent="false"
			android:drawableEnd="@android:drawable/arrow_down_float"
			android:background="@android:drawable/editbox_background"
			app:layout_constraintTop_toBottomOf="@+id/niveauEtudiantInput"
			android:textSize="18sp"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>