<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".activities.AddFiliereActivity" android:paddingLeft="20dp" android:paddingRight="20dp">

	<TextView
			android:text="Ajouter une Filière"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/addFiliereTitle"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="80dp" android:textSize="40sp" android:textStyle="bold"
			android:textColor="#000000"/>
	<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="textPersonName"
			android:ems="10"
			android:id="@+id/nomFiliereInput"
			android:hint="Nom de Filière" android:height="48dp"
			app:layout_constraintTop_toBottomOf="@+id/addFiliereTitle" android:layout_marginTop="40dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"/>

	<Button
			android:text="Ajouter"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:id="@+id/addFiliereBtn"
			android:backgroundTint="@color/primary"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/nomFiliereInput"
			android:layout_marginTop="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>