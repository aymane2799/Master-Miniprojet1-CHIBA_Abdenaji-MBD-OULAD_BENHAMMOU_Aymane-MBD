<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:id="@+id/mainFiliereLayout"
>

	<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
	>
		<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:padding="15dp">

			<TextView
					android:text="GÃ©nie Informatique"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/filiereNomTxt"
					android:textSize="20sp"
					android:textStyle="bold" android:textColor="@color/dark"
					app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
			<TextView
					android:text="12"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/modulesCountTxt"
					android:textSize="14sp"
					app:layout_constraintTop_toBottomOf="@+id/filiereNomTxt"
					android:layout_marginTop="5dp" app:layout_constraintStart_toStartOf="parent"/>
			<TextView
					android:text="/ 12 Modules"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/textView"
					app:layout_constraintTop_toBottomOf="@+id/filiereNomTxt"
					android:layout_marginTop="5dp" app:layout_constraintStart_toEndOf="@+id/modulesCountTxt"
					android:layout_marginStart="10dp"/>
			<ImageButton
					android:layout_width="wrap_content"
					android:layout_height="48dp" app:srcCompat="@drawable/ic_delete"
					android:id="@+id/filiereDeleteBtn"
					android:backgroundTint="@color/danger"
					app:layout_constraintEnd_toEndOf="parent"
					android:contentDescription="TODO"
					app:layout_constraintStart_toEndOf="@+id/filiereNomTxt" app:layout_constraintHorizontal_bias="1.0"
					app:layout_constraintTop_toTopOf="parent"/>
		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.cardview.widget.CardView>
</LinearLayout>