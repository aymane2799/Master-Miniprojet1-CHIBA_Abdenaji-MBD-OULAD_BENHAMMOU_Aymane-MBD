<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity" android:padding="20dp" android:orientation="vertical">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" android:layout_marginBottom="20dp">
        <TextView
                android:text="24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="60sp"
                android:layout_weight="1" android:id="@+id/filieresCountTxt"/>
        <TextView
                android:text="Filières"
                android:layout_width="wrap_content"
                android:layout_height="48dp" android:id="@+id/fileresTxt" android:textSize="24sp"
                android:gravity="center"
                android:layout_weight="6"/>
        <Button
                android:text="Détails"
                android:layout_width="wrap_content"
                android:layout_height="48dp" android:id="@+id/modulesDetailsBtn"
                android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" android:layout_marginBottom="20dp">
        <TextView
                android:text="41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/modulesCountTxt"
                android:textSize="60sp" android:layout_weight="1"/>
        <TextView
                android:text="Modules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/modulesTxt" android:textSize="24sp"
                android:gravity="center" android:layout_weight="6"/>
        <Button
                android:text="Détails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/filieresDetailsBtn"
                android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" android:layout_marginBottom="20dp">
        <TextView
                android:text="187"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="60sp"
                android:id="@+id/etudiantsCountTxt" android:layout_weight="1"/>
        <TextView
                android:text="Etudiants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/etudiantsTxt" android:textSize="24sp"
                android:gravity="center"
                android:layout_weight="6"/>
        <Button
                android:text="Détails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/etudiantsDetailsBtn"
                android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>